<h4>職員情報</h4>

<table class="table table-hover">
  <tbody>
    <tr>
      <th><%= User.human_attribute_name(:number) %></th>
      <td><%= @user.number %></td>
    </tr>
    <tr>
      <th>氏名（ふりがな）</th>
      <td><%= @user.furigana_lastname + "　" + @user.furigana_firstname %></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td><%= @user.full_name %></td>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:email) %></th>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:department_id) %></th>
      <td><%= @user.department&.name %></td>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:position) %></th>
      <td><%= @user.position_change %></td>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:admin) %></th>
      <td><%= @user.admin? ? "あり" : "なし" %></td>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:created_at) %></th>
      <td><%= create_time(@user.created_at) %></td>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:updated_at) %></th>
      <td><%= update_time(@user.updated_at) %></td>
    </tr>
  </tbody>
</table>

<%= link_to "編集" , edit_admin_user_path, class: "btn btn-primary-mr-3" %>
<%= link_to "削除" , [:admin, @user], method: :delete, data: { confirm: "ユーザー「#{@user.full_name}」を削除します。よろしいですか？" },class: "btn btn-danger" %>
