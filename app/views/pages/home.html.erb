<div class="container-fluid">
  <nav class="navbar navbar-expand-lg navbar-light bg-light mb-1">
    <a class="navbar-brand" href="#">業務管理システム</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">業務一覧</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">ToDo一覧</a>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled" href="#">共有事項</a>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled" href="#">予算</a>
        </li>
      </ul>
        
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="#">ログアウト</a>
        </li>
      </ul>
    </div>
  </nav>

  <div class="row">
    <div class="col-2">
      <select name="pulldown1">
        <option value="">年度を選択</option>
        <option value="/pages/home/R3">R3</option>
        <option value="/pages/home/R2">R2</option>
      </select>
      <input type="button" id="location" value="移動">
    </div>
    
    <div class="col-4">
      <p>氏名：<%= @user.name %>　　所属：<%= @department.name %></p>
    </div>
  </div>
  
  <div class="row">
    <div class="col-3" style="height:600px;">
      <div class="row mb-4">
        <div class="col-12">
          <div class="border border-dark" style="height:350px;">ToDo一覧&nbsp;&nbsp;<a href="/todos/new" class="btn btn-secondary btn-sm" role="button">追加</a></div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="border border-dark" style="height:250px;">ToDo一覧（期限超過）</div>
        </div>
      </div>
    </div>
    <div class="col-9" style="height:600px;">
      
      <div class="row mb-5">
        <div class="col-8" >
          
          <div class="container">
            <div class="slider">
              <div class="border border-dark pl-0" style="height:390px;">スケジュールＡ月</div>
              <div class="border border-dark pl-0" style="height:390px;">スケジュールＢ月</div>
              <div class="border border-dark pl-0" style="height:390px;">スケジュールＣ月</div>
            </div>
          </div>
        </div>
      
        <div class="col-4">
          <div class="border border-dark" style="height:390px;">不定期業務</div>
        </div>
      </div>
      <div class="row ml-1">
        <div class="col-12">
          <div class="border border-dark" style="height:183px;">
            担当業務一覧
            <p><%= @work.name %></p>
          </div>
         </div>
      </div>
    </div>
  </div>

  <script>
  $(function () {
  $('#location').click(function() {
      if ($(this).val() != '') {
        window.location.href = $('select[name=pulldown1]').val();
      }
    });
  });
  </script>

  <script>
  $(function() {
    $('.slider').slick({
      slidesToShow:1,
      prevArrow: '<i class="fas fa-arrow-alt-circle-left"></i>',
      nextArrow: '<i class="fas fa-arrow-alt-circle-right"></i>'
    })
  });
  </script>
  
</div>