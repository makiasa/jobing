<div class="row">
  <div class="col-2">    
    <select name="pulldown1">
      <option value="">年度を選択</option>
      <option value=<%= "/works/#{@works.find_by(fiscalyear: 2021).id}" %>>R3</option>
      <option value=<%= "/works/#{@works.find_by(fiscalyear: 2020).id}" %>>R2</option>
    </select>
    <input type="button" id="location" value="移動">
    <script>
      $(function () {
      $('#location').click(function() {
          if ($(this).val() != '') {
            window.location.href = $('select[name=pulldown1]').val();
          }
        });
      });
      </script>
  </div>
  
  <div class="col-4"> 
    ・業務名：<%= @work.name %>
  </div>
  <div class="col-5"> 
    ・業務時期：<%= @work.period %>月
  </div>
  <div class="col-1"> 
    <%= link_to edit_work_path(@work.id) do %>
    <button type="button" class="btn btn-secondary">編集</button>
    <% end %>
  </div>
</div>


<div class="row mt-3">
  <div class="col-11 ml-5 mr-5">
    業務概要
  <div class="border border-dark" style="height:50px;">
    <%= @work.summary %>
  </div>
  </div>
</div>


<div class="row mt-3">
  <div class="col-11 ml-5 mr-5">
    本業務の課題
  <div class="border border-dark" style="height:50px;">
  </div>
  </div>
</div>

<div class="row justify-content-center mt-5">
  <div class="col-2">
    <p class="text-center">業務フロー</p>
  </div>
</div>

<% i = 1 %>
<% @workflows.each do |workflow| %>
  <div class="row">
    <div class="col-6 ml-5">
      手順<%= workflow.number %>
      &nbsp;&nbsp;<a href="#" class="btn btn-secondary btn-sm" role="button">編集</a>
      &nbsp;&nbsp;<a href="#" class="btn btn-secondary btn-sm" role="button">削除</a>
    </div>
  </div>
  
  <div class="row">
      <div class="col-5 ml-5">
          <div class="border border-dark">
            <div class="overflow-auto" style="height:110px;">
              <%= workflow.content %>
            </div>
          </div>
      </div>
      <div class="col-6 mr-5">
        <p>備考：<%= workflow.note %></p>
        <p>ファイルパス：<%= link_to workflow.filepath, "#{workflow.filepath}" %></p>
      </div>
  </div>
  
  <div class="row justify-content-center offset-1">
    <div class="col-2">
      <% if i < @workflows.size %>
        <i class="fas fa-arrow-down fa-2x">&nbsp;&nbsp;<a href="/todos/new" class="btn btn-secondary btn-sm" role="button">追加</a></i>
      <% i += 1 end %>
    </div>
  </div>
<% end %>