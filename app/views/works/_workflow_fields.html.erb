<div class="nested-fields">
  <div class="row mx-auto">
    <div class="col-1"><%= f.select :number, 1..999, class: "form-control", placeholder: "手順番号" %></div>
    <div class="col-2"><%= f.text_field :content, class: "form-control", placeholder: "内容" %></div>
    <div class="col-2"><%= f.text_field :note, class: "form-control", placeholder: "備考" %></div>
    <div class="col-2"><%= f.text_field :filepath, class: "form-control", placeholder: "ファイルパス" %></div>
    <div class="offset-1 col-1 px-0 w-auto">
      <%= link_to_remove_association "削除", f, class: "btn btn-secondary btn-block" %>
    </div>
  </div>
</div>


