<div class="row" style="height:100px;">
</div>

<div class="row justify-content-center">
  <div class="col-4">
    <h3 class="text-center">ログイン</h3>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-3">
    <%= form_with scope: :session, url: login_path, local: true do |f| %> 　<!-- "url: login_path"の記載を忘れないこと！ -->
      <div class="form-group">
        <%= f.label "職員番号" %>
        <%= f.text_field :number, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "パスワード" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>

      <%= f.submit "ログイン", class: "btn-block btn-white mt-5" %>
    <% end %>
  </div>
</div>

