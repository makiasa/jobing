<div class="row" style="height:100px;">
</div>

<div class="row justify-content-center">
  <div class="login-box" style="width:400px;">
    <div class="col-12">
      <h4 class="text-center m-0">ログイン</h4>
    </div>
  
    <div class="col-12">
      <%= form_with scope: :session, url: login_path, local: true do |f| %> 　<!-- "url: login_path"の記載を忘れないこと！ -->
        <div class="form-group">
          <%= f.label "職員番号" %>
          <%= f.text_field :number, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "パスワード" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
  
        <%= f.submit "ログイン", class: "btn-block btn-secondary mt-5" %>
      <% end %>
    </div>
  </div>
</div>

