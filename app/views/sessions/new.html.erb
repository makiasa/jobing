<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-4 offset-md-4 users-new-container">
        <h1 class="text-center text-white">ログイン</h1>
        <%= form_with scope: :session, url: login_path, local: true do |f| %> 　<!-- "url: login_path"の記載を忘れないこと！ -->
          <div class="form-group">
            <%= f.label "職員番号", class: "text-white" %>
            <%= f.text_field :number, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "パスワード", class: "text-white" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>

          <%= f.submit "ログイン", class: "btn-block btn-white" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
