<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="text-center">Add ToDo</h1>
      <%= form_for @todo do |f| %>
        <div class="form-group">
          <%= f.label "内容" %>
          <%= f.text_area :content, class: 'form-control' %>
        </div>
        <% if logged_in? %>
          <%= f.submit '作成', class: 'btn btn-black btn-block' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>