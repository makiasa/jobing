<% if @event.errors.present? %>
  <ul id="error_explanation">
    <% @event.errors.full_messages.each do |message| %>
      <li class="text-danger"><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h5>イベント作成</h5>

<%= form_with(model: @event, local: true) do |f| %>

  <div class="title">
    <div class="form-tag">件名</div>
    <%= f.text_field :title %>
  </div>


  <div class="content">
    <div class="form-tag">内容</div>
    <%= f.text_field :content %>
  </div>

  <div class="time">
    <div class="form-tag">開始時間</div>
    <%= f.datetime_select :start_time %>
  </div>
  
  <div class="time">
    <div class="form-tag">終了時間</div>
    <%= f.datetime_select :end_time %>
  </div>

 <div class="submit">
    <%= f.submit %>
 </div>
 
<% end %>