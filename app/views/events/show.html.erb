<p id="notice"><%= notice %></p>
<div class="show">
<p>
  <strong>タイトル</strong>
  <%= @event.title %>
</p>

<p>
  <strong>内容</strong>
  <%= @event.content %>
</p>

<p>
  <strong>開始時間</strong>
  <%= @event.start_time.strftime("%Y-%m-%d %H:%M") %>
</p>

<p>
  <strong>終了時間</strong>
  <%= @event.end_time.strftime("%Y-%m-%d %H:%M") %>
</p>

<%= link_to '編集', edit_event_path(@event.id) %>
<%= link_to '消去', event_path(@event.id), method: :delete, data: { confirm: "本当に削除してよろしいですか?" } %>
<%= link_to '戻る', events_path %>
</div>