<h4>カレンダー</h4>
<%= link_to 'イベント追加', new_event_path , class: "btn btn-info btn-sm" %>
<br>
<br>

<%= month_calendar events: @events do |date, events| %>
  <%= date.day %>
  <% events.each do |event| %>
    <div class="small">
      ・<%= link_to event.title, event_path(event.id) %>
    </div>
  <% end %>
  
  <% if @todos.where(deadline: date) != [] %>
  　<div class="text-danger">!!!以下、ToDo作業期限!!!</div>
  <% end %>
  
  <% @todos.where(deadline: date).each do |todo| %>
    ・<%= link_to todo.work.name, todo_path(todo.id), class: "small" %>(<%= todo.content %>)
  <% end %>
<% end %>